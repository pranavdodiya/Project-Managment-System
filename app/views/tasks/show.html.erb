<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Status:</b>
  <%= @task.status %>
</p>

<p>
  <b>Project:</b>
  <%# <%= @task.project_master %> 
  <%=  ProjectMaster.find(@task.project_master.id).name %>
</p>

<p>
  <b>Assigned to:</b>
  <%# <%= @task.user_id %> 
  <%=  User.find(@task.user_id).email %>
</p>
<p>
  <b>Due_date:</b>
  <%# <%= @task.user_id %> 
  <%=  @task.due_date %>
</p>
<p>
  <% if @task.status=="complete"%>
  <b>Completed_date:</b>
  <%=  @task.updated_at.to_date %>
  <%end%>
</p>

