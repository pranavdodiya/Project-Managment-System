<h1>Listing tasks</h1>


<table border='1'>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Project</th>
    <th>Assigned to</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.project_master %></td>
    <td><%= User.find(task.user_id).email%></td>
    <td><%= link_to 'Show', [task.project_master, task] %></td>
    <td><%= link_to 'Edit', edit_project_master_task_path(task.project_master, task) %></td>
    <td><%= link_to 'Destroy', [task.project_master, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_project_master_task_path(params[:project_master_id]) %>
