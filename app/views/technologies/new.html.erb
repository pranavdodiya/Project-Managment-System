<h1>Add New Technology</h1>

<%= form_with model: @technology, method: :post do |f| %>
<%= f.label :Technology_name %>
<%= f.text_field :tname ,class: "form-control border-warning"%><br/>
<%= f.label :Technology_type %>
<%= f.text_field :ttype ,class: "form-control border-warning"%><br/>
<%= f.submit "Add Tech", class: "mt-2 btn btn-sm btn-outline-primary" %>
<% end %>
<br/>
<% if Technology.all.count > 0 %>
<p>Current/Existing Technologies</p>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Remove</th>
            <th></th>
        </tr>
        <thead>
        <% Technology.all.each do |ele| %>
            <tr>
                <td><%= ele.tname %></td>
                <td><%= ele.ttype %></td>
                <td><%= link_to "Remove", techdestroy_path(ele.id), class: "btn btn-sm btn-secondary" %></td>
                <td><%= link_to "#{ele.users.count} Developers", root_path, class: "link-primary text-decoration-none" %></td>
            </tr>
        <% end %>
    </table>
<% else %>
    <p>Currently no tech present in database!</p>
<% end %>
<br/>